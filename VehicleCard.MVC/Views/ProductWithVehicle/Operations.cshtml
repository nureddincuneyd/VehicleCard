@model IEnumerable<ModelAll>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Operasyonlar</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                    <li class="breadcrumb-item active">Operasyonlar</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Operasyonlar</h3>
                    </div>

                    @if (Model != null)
                    {

                        @foreach (var item in Model)
                        {
                            <!-- /.card-header -->
                            <div class="card-body table-responsive p-0">
                                <table class="table table-hover text-nowrap">
                                    <thead>
                                        <tr>
                                            <th>ID</th>
                                            <th>Plaka</th>
                                            <th>Model</th>
                                            <th>Boş Kapasite (KG)</th>
                                            <th>Operasyon Adı</th>
                                            <th>İşlem</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (item.lProductsWithVehicles != null)
                                        {
                                            foreach (var opr in item.lProductsWithVehicles.GroupBy(x=>x.OperationName).ToList())
                                            {

                                                <tr>
                                                    <td>@opr.FirstOrDefault().Id</td>
                                                    <td>@item.lVehicle.FirstOrDefault(x => x.Id == opr.FirstOrDefault().VehiclesId).Plate</td>
                                                    <td>@item.lModel.FirstOrDefault(y => y.Id == item.lVehicle.FirstOrDefault(x => x.Id == opr.FirstOrDefault().VehiclesId).vModelId).ModelName</td>
                                                    <td>@item.lProductsWithVehicles.OrderByDescending(x => x.Id).FirstOrDefault().AvailableCapKG</td>
                                                    <td>@opr.FirstOrDefault().OperationName</td>
                                                    <td>
                                                        <button class="btn btn-danger" onclick="delMdl(@opr.FirstOrDefault().OperationName)"><i class="fa-solid fa-trash-can"></i></button>
                                                    </td>
                                                </tr>
                                            }

                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    }
                </div>
                <!-- /.card -->
            </div>
        </div>
    </div>
</section>
<script>
    function delMdl(id) {
        Swal.fire({
            title: 'Marka&Model silmek istediğinize emin misiniz?',
            showDenyButton: true,
            showCancelButton: false,
            confirmButtonText: 'Evet, Sil',
            denyButtonText: `Vazgeç`
        }).then((result) => {
            /* Read more about isConfirmed, isDenied below */
            if (result.isConfirmed) {
                $.ajax({
                    type: "POST",
                    url: "/Models/DeleteModel",
                    data: { 'id': id },
                    success: function (response) {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: 'Marka&Model Silindi!!!',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        window.location.reload(true);
                    },
                    failure: function (response) {
                        alert(response.responseText);
                    },
                    error: function (response) {
                        alert(response.responseText);
                    }
                });
            } else if (result.isDenied) {
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Marka&Model silinmedi.',
                    showConfirmButton: false,
                    timer: 1500
                })
            }
        })
    }
</script>
